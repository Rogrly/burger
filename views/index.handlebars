<section>
	<header>
		<figure>
			<div id="burger">
				<img id="burgerLogo" src="https://thumbs.gfycat.com/WideeyedJealousDunlin-small.gif">
			</div>
			<h1>Burger Express</h1>
		</figure>
	</header>
	<main>
		<div id="undevoured">
			<h2>Burger Up!</h2>
			<ul>
				{{#each burgers}}
				{{#unless this.devoured}}
				<li>
					<form action="/{{this.id}}?_method=PUT" method="POST">
						<p>{{this.id}}. {{this.burger_name}}</p>
						<button type="submit">NOM!</button>
					</form>
				</li>
				{{/unless}}
				{{/each}}
			</ul>
		</div>
		<div id="devoured">
			<h2>Devoured Burger!</h2>
			<ul>
				{{#each burgers}}
				{{#if this.devoured}}
				<li>
					<p>{{this.id}}. {{this.burger_name}}</p>
				</li>
				{{/if}}
				{{/each}}
			</ul>
		</div>
	</main>
	<div id="burger-form">
		<form action="/api/addBurger" method="POST">
			<input type="text" name="burgerName" placeholder="Type A Burger" required>
			<button type="submit">Submit</button>
		</form>
		<h3>Insert a Burger & hit "Sumbit". <br>
			Click "Nom!" to Eat the Burger</h3>
	</div>
</section>